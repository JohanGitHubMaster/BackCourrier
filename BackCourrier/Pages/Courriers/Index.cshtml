            <td>
                @Html.DisplayFor(modelItem => item.Réferences)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expediteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commentaire)
            </td>
