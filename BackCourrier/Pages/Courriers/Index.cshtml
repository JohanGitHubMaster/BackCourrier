    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Courriers[0].Réferences)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courriers[0].Expediteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courriers[0].Objet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courriers[0].Commentaire)
            </th>
