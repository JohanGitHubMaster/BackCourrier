                @Html.DisplayFor(modelItem => item.Receptioniste.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Id)
            </td>
