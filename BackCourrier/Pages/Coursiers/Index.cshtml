@page
@model BackCourrier.Pages.Coursiers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Coursiers[0].Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
            <tr>
                <td>
                @Html.DisplayFor(modelItem => Model.Coursier.Nom)
                </td>
                <td>
                  <table class="table">
                      <thead>
                          <tr>
                            <th>Expediteur</th>
                            <th>Objet</th>
                            <th>Status</th>
                            <th>Receptionistes</th>
                            <th>Les Destinataires</th>
                          </tr>
                      </thead>
                      <tbody>
                        @foreach (var courrier in Model.Coursier.Courriers)
                        {    
                           <tr>
                              <td>
                                  @Html.DisplayFor(modelItem => courrier.Expediteur)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => courrier.Objet)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => courrier.Status.Type)
                              </td>
                                <td>
                                    @Html.DisplayFor(modelItem => courrier.Receptioniste.Nom)
                                </td>
                                <td>
                                    <ul>
                                        @foreach (var it in courrier.CourrierDestinataires)
                                        {
                                            <li>@Html.DisplayFor(modelItem => it.Destinataire.Nom)</li>
                                        }
                                        
                                    </ul>
                                </td>
                                <td>
                                    @if (courrier.StatusId == 2)
                                    {
                                        <a asp-page="./Mouvement" asp-route-courrierId="@courrier.Id">Livrer aux Receptioniste</a>
                                    }
                                </td>
                          </tr>                           
                        }
                      </tbody>
                  </table>
                  
                </td>
                <td>
                @*<a asp-page="./Edit" asp-route-id="@Model.Coursier.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@Model.Coursier.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@Model.Coursier.Id">Delete</a>*@
                
                </td>
            </tr>
        
    </tbody>
</table>
